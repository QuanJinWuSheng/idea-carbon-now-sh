<idea-plugin>
    <id>carbon-now-sh</id>
    <name>carbon-now-sh</name>
    <vendor email="nikola.trubitsyn@gmail.com" url="https://github.com/trubitsyn">Nikola Trubitsyn</vendor>
    <idea-version since-build="145"/>

    <depends>com.intellij.modules.platform</depends>

    <description><![CDATA[
      Open the selected code in <a href="https://carbon.now.sh">https://carbon.now.sh</a>
    ]]></description>

    <change-notes><![CDATA[
      <ul>
        <li>Add LaTex language</li>
        <li>Add N-Triples language</li>
        <li>Add Octave language</li>
        <li>Add SPARQL language</li>
        <li>Add Stylus language</li>
        <li>Add Turtle language</li>
      </ul>
    ]]>
    </change-notes>

    <actions>
        <action id="org.trubitsyn.carbonnowsh.open"
                class="org.trubitsyn.carbonnowsh.OpenInCarbonNowShAction"
                text="Open in carbon.now.sh" description="Open the selected code in https://carbon.now.sh">
            <add-to-group group-id="EditorPopupMenu" anchor="after" relative-to-action="$SearchWeb"/>
        </action>
    </actions>

</idea-plugin>
